.background
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: -1
  pointer-events: none

.background.background-0
  background: linear-gradient(to left top, rgba(0, 180, 216, 0.2), rgba(0, 180, 216, 0) 70%)

.background.background-1
  background: linear-gradient(to right top, rgba(3, 4, 94, 0.15), rgba(3, 4, 94, 0) 70%)










