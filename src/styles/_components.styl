.title
  font-family 'Oswald', sans-serif
  font-size 80px
  text-transform uppercase
  font-weight 700
  margin-bottom 0em
  margin-top 1em
  line-height: 1

.sub-title
  font-family 'Oswald', sans-serif
  font-size 30px
  text-transform uppercase
  font-weight 400 
  margin-top 0
  margin-bottom 0.1em


.description {
  width: 70%;
  font-size: 1.2rem;
  line-height: 1.5;
}

.section-title {
  font-size: 2rem; 
  font-weight: 800;
  margin-bottom: 20px;
  text-transform: uppercase;
