.experience
  .section-title
    font-family 'Oswald', sans-serif
    font-size 40px
    text-transform uppercase
    margin-bottom 40px

  .job
    margin-bottom 40px
    padding-left 20px
    border-left 2px solid rgba(255,255,255,0.3)
    
    .job-header
      display flex
      justify-content space-between
      align-items flex-start
      margin-bottom 10px

      .job-info
        display flex
        flex-direction column

        h4
          font-size 24px
          font-weight 700
          margin: 0

        .job-position
          font-size 14px
          font-weight 400
          color rgba(255, 255, 255, 0.7)
          margin-top: 2px
          line-height 1.2
          align-self: center

      .job-date
        font-size 16px
        font-weight 400
        color rgba(255,255,255,0.7)
        margin-left 20px

    .job-responsibilities
      list-style disc
      margin-left 20px
      li
        margin-bottom 5px
        font-size 16px
        line-height 1.5

.education
  margin-top 60px
  margin-bottom 80px

  .section-title
    font-family 'Oswald', sans-serif
    font-size 40px
    text-transform uppercase
    margin-bottom 30px

  .education-list
    list-style none
    padding 0
    margin 0
    margin-left: 0.5rem

    li
      margin-bottom 15px
      font-size 16px
      line-height 1.5
      color #fff  // zachovat bílý text jako u zbytku portfolia

      .school
        font-weight 700
        margin-right 5px

      .degree
        font-weight 400
        color rgba(255, 255, 255, 0.7)

